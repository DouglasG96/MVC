@model MVC.ViewModels.UsuariosViewModel

@{
    ViewData["Title"] = "Iniciar Sesion";
}



@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{ 
    <div class="text-center">
        <h1 class="display-4">Iniciar Sesion</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">

                </div>
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <!-- Creo label   -->
                        @Html.LabelFor(p => p.CorreoElectronico):

                        @Html.TextBoxFor(p => p.CorreoElectronico, "", new { @class = "form-control"})
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        @Html.LabelFor(p => p.Contrasena):
                        @Html.TextBoxFor(p => p.Contrasena, "", new { @class = "form-control", @type = "password" })
                    </div>
                </div>
                <br />
                <div style="text-align:center">
                    <input type="submit" class="btn btn-primary" value="Iniciar Sesion" onclick="document.location.href='@Url.Content("~/Home/Login")'"/>
                </div>
                </div>
        </div>
    </div>
}
